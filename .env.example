# Database Monitor - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control!

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Database Connections (uncomment and configure as needed)

# SQLite (no credentials needed)
DATABASE_SQLITE_URL=sqlite:///example.db

# PostgreSQL
# DATABASE_POSTGRES_URL=postgresql+psycopg://user:password@localhost:5432/database_name

# MySQL
# DATABASE_MYSQL_URL=mysql+pymysql://user:password@localhost:3306/database_name

# SQL Server
# DATABASE_MSSQL_URL=mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_DEBUG=True

# Monitoring Configuration
STATUS_CHECK_INTERVAL=5  # seconds between database status checks
CONNECTION_TIMEOUT=10    # seconds before connection times out

# Security (for production)
# REQUIRE_AUTH=False
# SESSION_TIMEOUT=3600
